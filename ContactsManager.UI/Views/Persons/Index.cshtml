@model List<PersonResponse>
<div class="grid-rows-[auto_auto_1fr] grid max-h-[80%] gap-4 bg-gray-50 p-6">

<section class="flex items-center justify-between rounded-lg bg-gray-100 p-4 shadow-md">
    <!-- Title -->
    <h1 class="text-3xl font-bold text-gray-800">Persons</h1>

    <!-- Create Person Button -->
   <div class="flex gap-3">
            <a asp-action="Create">
                <a asp-action="PersonsPDF">
                    <p class="px-6 py-3 text-sm font-medium text-blue-600 underline">
                        Download as PDF
                    </p>
                </a>
                <a  href="persons/create" class="rounded-lg bg-blue-600 px-6 py-3 text-sm font-medium text-white shadow transition duration-200 hover:bg-blue-700 focus:outline-none focus:ring-4 focus:ring-blue-300">
                    Create Person
                </a>
            </a>
   </div>
        
</section>


@await Html.PartialAsync("_FilterByPropertySearchbar", @Model)
<div class="max-h-full overflow-y-auto rounded-lg bg-white shadow-md">
    @await Html.PartialAsync("_PersonsTable", @Model)
</div>
</div>