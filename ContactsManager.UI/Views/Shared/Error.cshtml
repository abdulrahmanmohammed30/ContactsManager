@{
    ViewData["Title"] = "Error";
}

<div class="flex min-h-screen flex-col items-center justify-center bg-gray-100">
    <h2 class="mb-4 text-2xl font-semibold text-red-600">
        An error has occurred, please try again later.
    </h2>
    <p>@ViewBag?.ErrorMessage</p>
    <p>@ViewBag?.path</p>

    <!-- Placeholder Image -->
    <img src="~/error.jpg" 
         alt="Error Image" 
         class="mb-6 h-auto w-72 rounded-lg shadow-lg">

    <!-- Home Button -->
    <a href="/" class="rounded-lg bg-blue-600 px-6 py-3 text-lg font-medium text-white shadow-md transition hover:bg-blue-700">
        Go to Home Page
    </a>
</div>
